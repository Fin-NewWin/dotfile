#!/bin/sh

BRIGHT=$(brightnessctl | grep -o ".[0-9]*%" | grep -o "[0-9]*")

case $1 in
    *[0-9]*)
        FIRST=$BRIGHT
        BRIGHT=$((BRIGHT + $1))
        if [ $BRIGHT -lt 0 ]; then
            BRIGHT=0
        elif [ $BRIGHT -le $((-$1 - 1)) ]; then
            BRIGHT=1
        elif [ "$FIRST" -eq 1 ] && [ $BRIGHT -gt 1 ]; then
            BRIGHT=$(($1 + 0))
        fi
        brightnessctl s $BRIGHT% &
        ;;
esac
