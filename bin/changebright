#!/usr/bin/env bash

BRIGHT=/sys/class/backlight/intel_backlight/brightness
MAX_BRIGHT=$(cat /sys/class/backlight/intel_backlight/max_brightness)
CURR=$(cat $BRIGHT)
STEP=10

case $1 in
    up)
        CURR=$(($CURR + $STEP))
        if [ $CURR  -gt $MAX_BRIGHT ]; then
            CURR=100
        fi
        echo $CURR > $BRIGHT
        ;;
    down)
        CURR=$(($CURR - $STEP))
        if [ $CURR -lt 0 ]; then
            CURR=0
        fi
        echo "$CURR" > $BRIGHT
        ;;
esac
