#!/usr/bin/env bash

BRIGHT=$(brightnessctl | grep -o ".[0-9]*%" | grep -o "[0-9]*")

case $1 in
    ''|*[0-9]*)
        BRIGHT=$((BRIGHT + $1))
        if [ $BRIGHT -lt 0 ]; then
            BRIGHT=0
        elif [ $BRIGHT -gt 100 ]; then
            BRIGHT=100
        fi
        brightnessctl s $BRIGHT% &
        ;;
esac
