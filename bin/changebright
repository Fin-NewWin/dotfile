#!/bin/sh

send_notification() {
    brightness=$(printf '%.0f' $(xbacklight))
    dunstify -a "changebrightness" -u low -r "9993" -h int:value:"$brightness" -i "brightness-$1" "Brightness: ${brightness}%" -t 2000 &
}

case $1 in
    up)
        xbacklight +5
        send_notification "$1"
        ;;
    down)
        xbacklight -5
        send_notification "$1"
        ;;
esac
