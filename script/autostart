#!/bin/sh

killall polybar
killall picom
killall dunst
killall sxhkd
killall xidlehook
killall redshift
killall flameshot

# Status bar
polybar &

# Screenshot
flameshot &

# Notify daemon
dunst &

# Picom for all display
picom -b --experimental-backends

# Set wallpaper
setwall &

# Nightmode
/usr/lib/geoclue-2.0/demos/agent &
redshift &

# Keybindings Daemon
sxhkd &

# Set keyboard options
setxkbmap -layout us -option ctrl:nocaps
xset r rate 280 40 s off -dpms

# Bluelight filter using lat and long
# redshift -l 37.0:-120.0 -P 3000 -r &

# sleep
xidlehook --not-when-audio --not-when-fullscreen \
    --timer 300 'systemctl suspend' ''
